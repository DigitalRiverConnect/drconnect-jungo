@using DigitalRiver.CloudLink.Commerce.Nimbus.SportsUs.Infrastructure.Helpers
<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <style type="text/css">
            @@font-face {
                font-family: 'FontAwesome'; 
                font-style: normal; 
                font-weight: normal; 
                src: url('//netdna.bootstrapcdn.com/font-awesome/2.0/font/fontawesome-webfont.eot?#iefix') format('embedded-opentype'), 
                url('//netdna.bootstrapcdn.com/font-awesome/2.0/font/fontawesome-webfont.woff') format('woff'), 
                url('//netdna.bootstrapcdn.com/font-awesome/2.0/font/fontawesome-webfont.ttf') format('truetype'), 
                url('//netdna.bootstrapcdn.com/font-awesome/2.0/font/fontawesome-webfont.svg#FontAwesome') format('svg');
            }
            [class^="n2-icon-"], [class*=" n2-icon-"] {
                font-family:FontAwesome;
                font-weight:normal;
                font-style:normal;
                text-decoration:inherit;
                -webkit-font-smoothing:antialiased;
                *margin-right:.3em;
            }
            .admin .nav ul > li > span.horizontal {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/horizontal.gif")');
            }
            .admin .nav ul > li.last > span.horizontal {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/horizontal-last.gif")');
            }
            .admin .nav ul > li.folder-close.first > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/expandable-first.gif")');
            }
            .admin .nav ul > li.folder-close.first.leaf > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/expandable-first-leaf.gif")');
            }
            .admin .nav ul > li.folder-close > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/expandable.gif")');
            }
            .admin .nav ul > li.folder-close.last > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/expandable-last.gif")');
            }
            .admin .nav ul > li.folder-close.last-leaf > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/expandable-last.gif")');
            }
            .admin .nav ul > li.folder-open.first > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/collapsible-first.gif")');
            }
            .admin .nav ul > li.folder-open.first.leaf > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/collapsible-first-leaf.gif")');
            }
            .admin .nav ul > li.folder-open > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/collapsible.gif")');
            }
            .admin .nav ul > li.folder-open.last > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/collapsible-last.gif")');
            }
            .admin .nav ul > li.folder-open.last.leaf > a.toggler {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/collapsible-last.gif")');
            }
            .admin .nav .folder-close, .admin .nav .folder-open, .admin .nav .leaf {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/vertical.gif")');
            }
            #search button.s {
                background: #fff url('@Html.GetPublicURL("~/upload/Content/img/admin/find.png")') no-repeat 50% 50%;
            }
            #search button.r {
                background: #fff url('@Html.GetPublicURL("~/upload/Content/img/admin/cross_gray.png")') no-repeat 50% 50%;
            }
            #image-picker .results-wrapper.loading {
                background-image: url('@Html.GetPublicURL("~/upload/Content/img/admin/loading.gif")');
            }
        </style>
        @Styles.Render("~/coteries/admin_css")
        @Scripts.Render("~/coteries/core")
        @RenderSection("scripts", false)
    </head>
    <body>
        @RenderBody()
        @Scripts.Render("~/coteries/admin_js")    
    </body>
</html>